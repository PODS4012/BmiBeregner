@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">BMI Calculator</h1>
    <form>
        <div class="form-group">
            <label for="height">Enter your height in cm:</label><br />
            <input name="height" type="number" maxlength="10" id="height" />
            <small id="highHelp" class="form-text text-muted">We will not share your data with anyone</small>
        </div>

        <div class="form-group">
            <label for="weight">Enter your weight in kg:</label><br />
            <input name="weight" type="number" maxlength="10" id="weight" />
            <small id="weightHelp" class="form-text text-muted">We will not share your data with anyone</small>
        </div>

        <button type="button" onclick="calculateBmi()">Calculate BMI</button>
    </form>
    <div id="resultOfBmi"></div>
    <div id="resultOfPost"></div>
</div>
